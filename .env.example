# Development & Testing Environment Variables
# Copy to .env file for local testing

# GitHub MCP Server Configuration
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_MCP_SERVER_URL=https://api.githubcopilot.com/mcp/
GITHUB_MCP_TIMEOUT=30000
GITHUB_MCP_ENABLED=true

# MongoDB MCP Server - Java Spring Boot Implementation (Primary)
MONGO_MCP_SERVER_JAR_PATH=C:/spring-boot-ai-mongo.jar
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=testDB
MONGO_MCP_TIMEOUT=20000
MONGO_MCP_ENABLED=true
MONGO_MCP_PROFILE=development
MONGO_MCP_LOG_LEVEL=DEBUG
MONGO_MCP_SERVER_PORT=0

# MongoDB MCP Server - Node.js Implementation (Alternative)
MONGODB_URI=mongodb://localhost:27017/testDB
MONGODB_DB_NAME=testDB
MCP_MONGODB_SERVER_PATH=./mcp-servers/mongodb-server.js
MONGODB_MCP_TIMEOUT=15000
MONGODB_MCP_ENABLED=false
MCP_MONGODB_LOG_LEVEL=debug
MONGODB_POOL_SIZE=5
MONGODB_CONNECTION_TIMEOUT=10000

# Application Configuration
SPRING_PROFILES_ACTIVE=default
PORT=8080
LOG_LEVEL=debug

# MCP Client Configuration
MCP_DEFAULT_TIMEOUT=30000
MCP_MAX_CONNECTIONS=100
MCP_CONNECTION_POOL_SIZE=10
MCP_RETRY_MAX_ATTEMPTS=3
MCP_RETRY_BACKOFF_MULTIPLIER=2.0

# Production Environment Variables (for reference)
# Copy to production environment or CI/CD systems
# SSL_ENABLED=true
# SSL_KEYSTORE_PATH=/path/to/keystore.p12
# SSL_KEYSTORE_PASSWORD=your_keystore_password
# SPRING_PROFILES_ACTIVE=prod
# MONGO_DATABASE=production
# MONGO_MCP_PROFILE=production
# MONGO_MCP_LOG_LEVEL=INFO